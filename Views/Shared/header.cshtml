
@{
    ViewData["Title"] = "header";
}

<header class="header">
    <div class="logo">
        <img src="~/images/logo.png" alt="Logo">
    </div>

    <!-- Navigation Menu -->
    <nav class="nav">
        <ul class="nav-links">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="OurStory">Our Story</a></li>
            <li><a asp-controller="Home" asp-action="OurTeam">Our Team</a></li>
            <li><a asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
        </ul>
    </nav>

    <!-- User Icon -->
    <div class="user-icon">
        <a asp-controller="Account" asp-action="Register" class="user-link">👤</a>
    </div>

    <!-- Mobile Menu Toggle Button -->
    <button class="menu-toggle">&#9776;</button>
</header>
