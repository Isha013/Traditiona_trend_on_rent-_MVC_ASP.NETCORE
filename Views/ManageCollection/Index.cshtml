        padding-left: 100px;
    }

    .heading {
        color: #6b1f32;
        font-weight: bold;
        font-size: 22px;
        text-transform: uppercase;
        margin-bottom: 50px;
    }

    .container {
        background-color: #f3e7d6;
        padding: 20px;
        border-radius: 10px;
        max-width: 1200px;
        position: relative;
        margin-left: auto;
        margin-right: 30px;
    }

    .table-container {
        margin-top: 20px;
        padding: 10px;
        margin-left: 100px;
        margin-right: 0;
    }

    .table thead th {
        background-color: #6b1f32;
        color: white;
        padding: 10px;
        border-radius: 10px 10px 0 0;
    }

    .table tbody td {
        background-color: #f3e7d6;
        color: black;
        padding: 10px;
    }

    .action-btn {
        border: none;
        padding: 8px 12px;
        cursor: pointer;
        border-radius: 4px;
        color: white;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
    }

    .button-wrapper {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 10px;
        margin-right: 0;
    }


    .edit-btn {
        background-color: green;
    }

