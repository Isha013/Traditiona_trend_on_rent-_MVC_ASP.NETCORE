@model List<ManageCollection>

@{
    ViewData["Title"] = "Add Collection";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="heading">Manage Collection</h2>

<div class="button-wrapper">
    <a asp-action="Create" class="custom-btn">Add New Collection</a>
</div>


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Choli Name</th>
                <th>Choli Type</th>
                <th>Topwear Fabric</th>
                <th>Bottomwear Fabric</th>
                <th>Dupatta Type</th>
                <th>Rental Price</th>
                <th>Set Type</th>
                <th>Rental Duration</th>
                <th>Set Size</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CholiName</td>
                    <td>@item.CholiType</td>
                    <td>@item.TopwearFabric</td>
                    <td>@item.BottomwearFabric</td>
                    <td>@item.DupattaType</td>
                    <td>@item.RentalPrice</td>
                    <td>@item.SetType</td>
                    <td>@item.RentalDuration</td>
                    <td>@item.SetSize</td>
                    <td>
                        <img src="@item.CholiImage" alt="Choli Image" style="height: 100px;" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn edit-btn">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn deny-btn"
                           onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

