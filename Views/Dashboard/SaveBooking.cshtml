@{
    ViewData["Title"] = "SaveBooking";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Collection</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .header-container {
            background-color: #7B273B;
            color: white;
            text-align: center;
            padding: 10px;
            font-size: 32px;
            text-transform: uppercase;
            border-radius: 10px;
            margin-bottom: 20px;
            margin-top: -10px;
        }

        .form-container {
            max-width: 1000px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto;
        }

        .form-control, .form-select {
            border: 2px solid #7C3E3E;
            border-radius: 5px;
            margin-bottom: 10px;
            font-size: 14px;
            padding: 6px;
            height: 35px;
        }

        .btn-custom {
            background: #7C3E3E;
            color: white;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            font-weight: bold;
            border: none;
            margin-top: 10px;
        }

            .btn-custom:hover {
                background: #5A2D2D;
            }

        .back-arrow {
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: white;
            border-radius: 50%;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            text-decoration: none;
        }

            .back-arrow i {
                font-size: 20px;
                color: black;
            }

        .back-arrow-container {
            position: absolute;
            top: 120px; /* Heading ke upar set karne ke liye */
            left: 20px;
            z-index: 1000; /* Ensure it's above other elements */
        }
    </style>
</head>
<body>
    <div class="back-arrow-container">
        <a href="@Url.Action("Categories", "Dashboard")" class="back-arrow">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="container">
        <div class="header-container">
            <h1>Booking Process</h1>
        </div>

        <div class="form-container">
            <form method="post" asp-controller="Booking" asp-action="SaveBooking" id="contactForm">
                <input type="text" class="form-control" name="Name" placeholder="Enter Name" required>
                <input type="text" class="form-control" name="Address" placeholder="Enter Address" required>
                <input type="text" class="form-control" name="CholiName" placeholder="Enter Choli Name" required>

                <select class="form-select" name="CholiType" required>
                    <option value="">Select Choli Type</option>
                    <option value="Wedding">Wedding</option>
                    <option value="Party Wear">Party Wear</option>
                    <option value="Navratri">Navratri</option>
                </select>

                <input type="text" class="form-control" name="TopwearFabric" placeholder="Enter Topwear Fabric Name">
                <input type="text" class="form-control" name="BottomwearFabric" placeholder="Enter Bottomwear Fabric Name">
                <input type="text" class="form-control" name="DupattaType" placeholder="Enter Dupatta Type Name">
                <input type="number" class="form-control" name="RentalPrice" placeholder="Enter Set Rental Prices" step="0.01">

                <select class="form-select" name="SetType" required>
                    <option value="">Select Set Type</option>
                    <option value="Choli and Dupatta">Choli and Dupatta</option>
                    <option value="Choli">Choli</option>
                </select>

                <select class="form-select" name="RentalTime" required>
                    <option value="">Select Rental Duration</option>
                    <option value="12 hours">12 hours</option>
                    <option value="24 hours">24 hours</option>
                    <option value="48 hours">48 hours</option>
                </select>

                <select class="form-select" name="SetSize" required>
                    <option value="">Select Set Size</option>
                    <option value="S">Small</option>
                    <option value="M">Medium</option>
                    <option value="L">Large</option>
                </select>

                <input type="text" class="form-control" name="ContactNumber" placeholder="Enter Contact Number" required pattern="[0-9]{10}" title="Enter a valid 10-digit phone number">

                <button type="submit" class="btn-custom">Proceed to Payment</button>
            </form>
        </div>
    </div>
</body>
</html>
