@model HistoryItem
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";

}

<style>
    .main-wrapper {
        max-width: 650px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .form-title {
        text-align: center;
        font-size: 26px;
        font-weight: bold;
        color: #800020;
        margin-bottom: 25px;
    }

    .container {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 30px 25px;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        gap: 18px;
    }

    .form-input {
        width: 100%;
        padding: 12px;
        border: 2px solid #800020;
        border-radius: 5px;
        font-size: 16px;
        color: #7B273B;
        box-sizing: border-box;
    }

        .form-input::placeholder {
            color: #7B273B;
        }

    label {
        color: #7B273B;
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-button {
        background: #800020;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
        text-align: center;
        text-decoration: none;
    }

        .form-button:hover {
            background: #600015;
        }

    .cancel-button {
        background: #888;
        margin-left: 10px;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 15px;
    }
</style>

<div class="main-wrapper">
    <div class="container">
        <h2 class="form-title">Edit Item</h2>
        <form asp-action="Edit" method="post" class="form-container">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" /> <!-- Preserve image -->


            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-input" />
            </div>

            <div>
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-input" />
            </div>

            <div>
                <label asp-for="CholiName"></label>
                <input asp-for="CholiName" class="form-input" />
            </div>

            <div>
                <label asp-for="SetType"></label>
                <input asp-for="SetType" class="form-input" />
            </div>

            <div>
                <label asp-for="Time"></label>
                <input asp-for="Time" class="form-input" />
            </div>

            <div>
                <label asp-for="SetSize"></label>
                <input asp-for="SetSize" class="form-input" />
            </div>

            <div>
                <label asp-for="Contact"></label>
                <input asp-for="Contact" class="form-input" />
            </div>

            <div class="button-group">
                <button type="submit" class="form-button">Save</button>
                <a asp-action="History" class="form-button cancel-button">Cancel</a>
            </div>
        </form>
    </div>
</div>
