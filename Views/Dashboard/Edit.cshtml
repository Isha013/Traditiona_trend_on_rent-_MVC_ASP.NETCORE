@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Collection</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .header-container {
            background-color: #7B273B;
            color: white;
            text-align: center;
            padding: 10px;
            font-size: 32px;
            text-transform: uppercase;
            border-radius: 10px;
            margin-bottom: 20px;
            margin-top: -10px;
        }

        .form-container {
            max-width: 1000px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto;
        }

        .form-control, .form-select {
            border: 2px solid #7C3E3E;
            border-radius: 5px;
            margin-bottom: 10px;
            font-size: 14px;
            padding: 6px;
            height: 35px;
        }

        .btn-custom {
            background: #7C3E3E;
            color: white;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            font-weight: bold;
            border: none;
            margin-top: 10px;
        }

            .btn-custom:hover {
                background: #5A2D2D;
            }

        .back-arrow {
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: white;
            border-radius: 50%;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            text-decoration: none;

        }

            .back-arrow i {
                font-size: 20px;
                color: black;
            }

        .back-arrow-container {
            position: absolute;
            top: 120px; /* Heading ke upar set karne ke liye */
            left: 20px;
            z-index: 1000; /* Ensure it's above other elements */
        }
    </style>
</head>
<body>
    <div class="back-arrow-container">
        <a href="@Url.Action("History", "Dashboard")" class="back-arrow">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
    <div class="container">
        <div class="header-container">
            <h1>Edit Collection</h1>
        </div>

        <div class="form-container">
            <input type="text" class="form-control" placeholder="Enter Name">
            <input type="text" class="form-control" placeholder="Enter Address">
            <input type="text" class="form-control" placeholder="Enter Choli Name">
            <select class="form-select">
                <option selected>Enter Choli Types</option>
                <option value="1">Type 1</option>
                <option value="2">Type 2</option>
            </select>
            <input type="text" class="form-control" placeholder="Enter Topwear Fabric Name">
            <input type="text" class="form-control" placeholder="Enter Bottomwear Fabric Name">
            <input type="text" class="form-control" placeholder="Enter Dupatta Type Name">
            <input type="text" class="form-control" placeholder="Enter Set Rental Prices">
            <select class="form-select">
                <option selected>Enter Set Type</option>
                <option value="1">Set 1</option>
                <option value="2">Set 2</option>
            </select>
            <select class="form-select">
                <option selected>Enter How Much Time</option>
                <option value="1">1 Day</option>
                <option value="2">2 Days</option>
            </select>
            <select class="form-select">
                <option selected>Enter Set Size</option>
                <option value="S">Small</option>
                <option value="M">Medium</option>
                <option value="L">Large</option>
            </select>
            <input type="text" class="form-control" placeholder="Enter Contact Number">

            <button class="btn-custom">Edit Collection</button>
        </div>
    </div>
</body>
</html>
