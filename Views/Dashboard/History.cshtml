@model List<HistoryItem>
@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">

<style>
    .history-heading {
        background-color: #7B273B;
        color: white;
        text-align: center;
        padding: 10px;
        font-size: 32px;
        text-transform: uppercase;
        border-radius: 10px;
        margin-bottom: 20px;
        margin-top: -10px;
    }

    .scroll-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        padding: 10px;
    }

    .card-custom {
        display: flex;
        flex-direction: row;
        align-items: center;
        background-color: #5B3A3A;
        color: white;
        border-radius: 10px;
        overflow: hidden;
        padding: 15px;
        transition: transform 0.3s, box-shadow 0.3s;
        width: 100%;
        max-width: 1500px;
        gap: 20px;
    }

    .card-img {
        width: 200px;
        height: 300px;
        object-fit: cover;
        border-radius: 5px;
        margin-left: 60px;
    }

    .card-custom:hover {
        transform: scale(1.02);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .card-body {
        flex: 1;
        padding: 15px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 10px;
        margin-left: 50px;
    }

    .card-text p {
        margin-bottom: 5px;
        font-size: 0.9rem;
        margin-left: 50px;
    }

    .icon-btn {
        background-color: white;
        border: none;
        padding: 8px;
        border-radius: 6px;
        margin-right: 5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.3s;
    }

        .icon-btn:hover {
            background-color: #f0f0f0;
        }

    .btn-container {
        display: flex;
        justify-content: flex-end;
        margin-top: 8px;
        margin-right: 50px;
    }

    .edit {
        margin-left: 50px;
        margin-bottom: 8px;
    }
</style>

<div class="container mt-4">
    <h2 class="history-heading">History</h2>
    <div class="scroll-container">
        @foreach (var item in Model)
        {
            <div class="card-custom shadow-sm">
                <img src="@Url.Content(item.Image ?? "~/Images/default.png")" alt="@item.Name" class="card-img" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name (ID: @item.Id)</h5>
                    <p class="card-text"><strong>Address:</strong> @item.Address</p>
                    <p class="card-text"><strong>Choli Name:</strong> @item.CholiName</p>
                    <p class="card-text"><strong>Set Type:</strong> @item.SetType</p>
                    <p class="card-text"><strong>Time:</strong> @item.Time</p>
                    <p class="card-text"><strong>Set Size:</strong> @item.SetSize</p>
                    <p class="card-text"><strong>Contact:</strong> @item.Contact</p>

                    <div class="btn-container">
                        <a href="@Url.Action("Edit", "Dashboard", new { id = item.Id })" class="icon-btn btn btn-sm btn-light me-2">
                            <i class="bi bi-pencil text-primary"></i>
                        </a>
                        <form asp-action="Delete" asp-controller="Dashboard" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
