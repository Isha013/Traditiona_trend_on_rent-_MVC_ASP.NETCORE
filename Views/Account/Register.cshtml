@model Traditiona_trend_on_rent.Models.Users

@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Sign Up</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #8c6b76;
            overflow: hidden;
        }

        .container {
            position: absolute;
            top: 50%;
            right: 15%;
            transform: translateY(-50%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .form-section {
            padding: 30px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #772b40;
            font-family: 'Georgia', serif;
            margin-bottom: 20px;
        }

        input {
            width: 350px;
            padding: 10px;
            margin: 8px 0;
            border: none;
            border-radius: 20px;
            background-color: #f0f0f0;
            font-size: 14px;
        }

        button {
            width: 250px;
            padding: 10px;
            margin-top: 20px;
            background-color: #772b40;
            color: white;
            font-size: 18px;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #5b1e30;
            }

        .links {
            margin-top: 20px;
        }

            .links a {
                color: #772b40;
                text-decoration: none;
                margin-right: 10px;
            }

        .image-container {
            position: absolute;
            left: 10%;
            transform: translateY(500px); /* Start from below the viewport */
            transition: transform 1s ease-out;
        }

            .image-container img {
                width: 500px;
                border-radius: 10px;
            }

            .image-container.animate {
                transform: translateY(0); /* Smoothly move to its original position */
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="form-section">
            <h2>Sign Up</h2>

            @if (ViewBag.Message != null)
            {
                <p style="color: green;">@ViewBag.Message</p>
            }

            <form method="post" asp-action="Register">
                @Html.AntiForgeryToken()

                <label>Username:</label><br>
                <input type="text" asp-for="UserName" required /><br>
                <span asp-validation-for="UserName" style="color: red;"></span><br>

                <label>Email Address:</label><br>
                <input type="email" asp-for="Email" required /><br>
                <span asp-validation-for="Email" style="color: red;"></span><br>

                <label>Mobile Number:</label><br>
                <input type="text" asp-for="Phone" required /><br>
                <span asp-validation-for="Phone" style="color: red;"></span><br>

                <label>Password:</label><br>
                <input type="password" asp-for="Password" required /><br>
                <span asp-validation-for="Password" style="color: red;"></span><br>

                <label>Confirm Password:</label><br>
                <input type="password" name="CPassword" required /><br>
                <span style="color: red;">@ViewBag.ConfirmPasswordError</span><br>

                <button type="submit">Sign In</button>
            </form>

            <div class="links">
                <a asp-controller="Home" asp-action="Index">Go Back</a> |
                <a asp-controller="Account" asp-action="Login">Login</a>
            </div>
        </div>
    </div>

    <!-- Animated Image Container -->
    <div class="image-container" id="animatedImage">
        <img src="~/Images/register.png" alt="Girl Image" />
    </div>

    <script>
        window.onload = function () {
            document.getElementById("animatedImage").classList.add("animate");
        };
    </script>
</body>
</html>
