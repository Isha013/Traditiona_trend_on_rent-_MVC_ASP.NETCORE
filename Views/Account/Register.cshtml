@model Traditiona_trend_on_rent.Models.Users

@{
    ViewData["Title"] = "Register";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #b09798; /* Background color from image */
            margin: 0;
        }

        .container {
            display: flex;
            width: 80%;
            max-width: 1200px;
            background-color: #b09798;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .image-section {
            flex: 1.3;
            background: url('E:\ASP.net\Traditiona_trend_on_rent\wwwroot\Images\register.png') no-repeat center;
            background-size: cover;
        }

        .form-section {
            flex: 1;
            padding: 40px;
            background-color: #dbc1ac; /* Form background */
            text-align: center;
        }

        h2 {
            color: #5b2333;
            font-size: 30px;
            font-family: 'Georgia', serif;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: bold;
            color: #5b2333;
            text-align: left;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #5b2333;
            border-radius: 5px;
            font-size: 16px;
        }

        button {
            background-color: #5b2333;
            color: white;
            padding: 10px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #441822;
            }

        .go-back {
            margin-top: 10px;
            color: #5b2333;
            cursor: pointer;
        }

            .go-back:hover {
                text-decoration: underline;
            }

        .links {
            margin-top: 15px;
        }

            .links a {
                color: #5b2333;
                text-decoration: none;
                font-weight: bold;
                margin: 0 10px;
                cursor: pointer;
            }

                .links a:hover {
                    text-decoration: underline;
                }


    </style>
</head>
<body>

    <div class="container">
        <div class="image-section"></div>

        <div class="form-section">
            <h2>Sign Up</h2>

            @if (ViewBag.Message != null)
            {
                <p style="color: green;">@ViewBag.Message</p>
            }

            <form method="post" asp-action="Register">
                @Html.AntiForgeryToken()

                <label>Username:</label>
                <input type="text" asp-for="UserName" required />
                <span asp-validation-for="UserName" style="color: red;"></span>

                <label>Email Address:</label>
                <input type="email" asp-for="Email" required />
                <span asp-validation-for="Email" style="color: red;"></span>

                <label>Mobile Number:</label>
                <input type="text" asp-for="Phone" required />
                <span asp-validation-for="Phone" style="color: red;"></span>

                <label>Password:</label>
                <input type="password" asp-for="Password" required />
                <span asp-validation-for="Password" style="color: red;"></span>

                <label>Confirm Password:</label>
                <input type="password" name="CPassword" required />
                <span style="color: red;">@ViewBag.ConfirmPasswordError</span>

                <button type="submit">Sign In</button>
            </form>
            <div class="links">
                <a asp-controller="Home" asp-action="Index">Go Back</a> |
                <a asp-controller="Account" asp-action="Login">Login</a>
            </div>

        </div>
    </div>

</body>
</html>
