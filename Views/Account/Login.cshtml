@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #8c6b76;
            overflow: hidden;
        }

        .logo {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 50px;
        }

        .container {
            text-align: left;
            position: absolute;
            top: 50%;
            left: 30%;
            transform: translateY(-50%);
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .title {
            color: #772b40;
            font-size: 40px;
            font-weight: bold;
            margin-bottom: 20px;
            font-family: 'Georgia', serif;
            text-align: center;
        }

        .form {
            margin-top: 20px;
        }

        .input-box {
            width: 350px;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 20px;
            background-color: #f2f2f2;
            display: block;
            font-size: 18px;
            font-family: 'Georgia', serif;
        }

        .btn {
            width: 250px;
            padding: 15px;
            margin-top: 20px;
            background-color: #772b40;
            color: white;
            font-size: 20px;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #5b1e30;
            }

        .extra-text {
            margin-top: 15px;
            text-align: center;
            color: #772b40;
            font-size: 16px;
        }

            .extra-text a {
                color: #ffd700;
                text-decoration: none;
                font-weight: bold;
                margin-left: 5px;
            }

                .extra-text a:hover {
                    text-decoration: underline;
                }

        .image-container {
            position: absolute;
            bottom: -500px;
            right: 0%;
            transition: bottom 1s ease-out;
        }

            .image-container img {
                width: 600px;
                border-radius: 10px;
            }

            .image-container.animate {
                bottom: -80px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="title">Login</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <p class="error" style="color: red;">@ViewBag.ErrorMessage</p>
        }

        <form method="post" asp-action="Login">
            @Html.AntiForgeryToken()

            <label>Email:</label>
            <input type="email" name="Email" class="input-box" required />

            <label>Password:</label>
            <input type="password" name="Password" class="input-box" required />

            <button type="submit" class="btn">Login</button>
        </form>

        <p class="extra-text">
            Don't have an account?
            <a href="@Url.Action("Register", "Account")">Sign Up</a>
        </p>
    </div>

    <div class="image-container" id="animatedImage">
        <img src="~/Images/login.png" alt="Girl Image" />
    </div>

    <!-- Animation Script -->
    <script>
        window.onload = function () {
            document.getElementById("animatedImage").classList.add("animate");
        };
    </script>
</body>
</html>
