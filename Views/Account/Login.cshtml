@{
}
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #b09798;
            margin: 0;
        }

        .container {
            width: 350px;
            padding: 20px;
            background-color: #dbc1ac;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        h2 {
            color: #5b2333;
            font-family: 'Georgia', serif;
            margin-bottom: 20px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #5b2333;
            border-radius: 5px;
            font-size: 16px;
        }

        button {
            background-color: #5b2333;
            color: white;
            padding: 10px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #441822;
            }

        .error {
            color: red;
        }

    </style>
</head>
<body>

    <div class="container">
        <h2>Login</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <p class="error">@ViewBag.ErrorMessage</p>
        }

        <form method="post" asp-action="Login">
            @Html.AntiForgeryToken()

            <label>Email:</label>
            <input type="email" name="Email" required />

            <label>Password:</label>
            <input type="password" name="Password" required />

            <button type="submit">Login</button>
        </form>

        <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Sign Up</a></p>
    </div>

</body>
</html>
