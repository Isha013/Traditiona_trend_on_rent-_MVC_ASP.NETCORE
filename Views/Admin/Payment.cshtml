@{
    ViewData["Title"] = "User Registration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment History</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #fff;
            padding: 20px;
        }

        .container-wrapper {
            text-align: center; /* Heading center me dikhane ke liye */
            margin-bottom: 20px; /* Container se thoda gap dene ke liye */
        }

        .heading {
            color: #6b1f32;
            font-weight: bold;
            font-size: 22px;
            text-transform: uppercase;
            margin-bottom: 50px;
        }

        .container {
            background-color: #f3e7d6;
            padding: 20px;
            border-radius: 10px;
            max-width: 800px; /* Width chhoti karne ke liye */
            margin: auto; /* Center align karne ke liye */
        }

        .table thead th {
            background-color: #6b1f32;
            color: white;
            padding: 10px;
            border-radius: 10px 10px 0 0;
        }

        .table tbody td {
            background-color: #f3e7d6;
            color: black;
            padding: 10px;
        }
    </style>
</head>

<body>

    <!-- Heading ko container se bahar aur center me rakha -->
    <div class="container-wrapper">
        <h2 class="heading">PAYMENT HISTORY</h2>
    </div>

    <div class="container mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>MOBILE NUMBER</th>
                    <th>AGE</th>
                    <th>ACCOUNT NUMBER</th>
                    <th>CVV</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Umangi</td>
                    <td>+91 91739 14174</td>
                    <td>21</td>
                    <td>659874213265987</td>
                    <td>1204</td>
                </tr>
            </tbody>
        </table>
    </div>

</body>
</html>
