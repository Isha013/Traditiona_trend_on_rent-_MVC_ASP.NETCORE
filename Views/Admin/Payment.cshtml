@model List<Payment>

@{
    ViewData["Title"] = "Payments";
}

<h2>Payments</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Amount</th>
                <th>Order ID</th>
                <th>Payment ID</th>
                <th>Status</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.Name</td>
                    <td>@payment.Email</td>
                    <td>@payment.Phone</td>
                    <td>@payment.Amount</td>
                    <td>@payment.OrderId</td>
                    <td>@payment.PaymentId</td>
                    <td>
                        @if (payment.PaymentStatus == "Success")
                        {
                            <span class="text-success">@payment.PaymentStatus</span>
                        }
                        else
                        {
                            <span class="text-danger">@payment.PaymentStatus</span>
                        }
                    </td>
                    <td>@payment.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No payments found.</p>
}
