@{
    ViewData["Title"] = "User Registration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Traditiona_trend_on_rent.Models.User>

<h2 class="heading">USER REGISTRATION</h2>

<div class="user-table-container">
    <table class="user-table">
        <thead>
            <tr>
                <th>USERNAME</th>
                <th>EMAIL ADDRESS</th>
                <th>MOBILE NO.</th>
                <th>PASSWORD</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td><strong>@user.Name</strong></td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>
                        <span class="password-dots">•••••••••••</span>
                        <i class="eye-icon" onclick="togglePassword(this)">👁️</i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- ✅ CSS -->
<style>
    .heading {
        color: #6b1f32;
        font-weight: bold;
        font-size: 22px;
        text-transform: uppercase;
        margin-bottom: 10px;
    }

    .user-table-container {
        background: #f5e7d6;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
        max-width: 900px;
        margin: auto;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
    }

        .user-table th, .user-table td {
            padding: 12px;
            border-bottom: 2px solid #6b1f32;
            text-align: left;
        }

        .user-table th {
            background: #6b1f32;
            color: white;
            font-size: 14px;
            text-transform: uppercase;
        }

        .user-table td {
            font-size: 14px;
            color: #333;
        }

    .password-dots {
        font-size: 16px;
        font-weight: bold;
        color: black;
    }

    .eye-icon {
        cursor: pointer;
        margin-left: 10px;
        color: #6b1f32;
    }

        .eye-icon:hover {
            color: #a0525c;
        }
</style>

<!-- ✅ JavaScript: Password Toggle -->
<script>
    function togglePassword(icon) {
        let passwordSpan = icon.previousElementSibling;
        if (passwordSpan.innerText === "•••••••••••") {
            passwordSpan.innerText = "password123"; // Replace with actual password
        } else {
            passwordSpan.innerText = "•••••••••••";
        }
    }
</script>
