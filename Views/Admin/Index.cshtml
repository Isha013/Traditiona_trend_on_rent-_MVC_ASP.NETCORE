@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Traditiona_trend_on_rent.Models.Contact>

<!-- ✅ Wrapper to Center Content -->
<div class="content-wrapper">

    <!-- ✅ Dashboard Stats -->
    <div class="dashboard-container">
        <div class="stat-box red">
            <h2>@ViewData["TotalBookings"]</h2>
            <p>TOTAL BOOKINGS</p>
        </div>
      
        <div class="stat-box gold">
            <h2>@ViewData["TotalCollections"]</h2>
            <p>TOTAL COLLECTION</p>
        </div>
        <div class="stat-box blue">
            <h2>@ViewData["TotalRegisteredUsers"]</h2>
            <p>RECENTLY REGISTERED</p>
        </div>
    </div>


    <!-- ✅ Customer Reviews Table -->
    <div class="reviews-container">
        <h2 class="heading">CUSTOMER REVIEW</h2>
        <table class="reviews-table">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>EMAIL</th>
                    <th>MESSAGE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Contact in Model)
                {
                    <tr>
                        <td>@Contact.Name</td>
                        <td>@Contact.Email</td>
                        <td>@Contact.Message</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<!-- ✅ Styles (Without Media Queries) -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 20px;
    }

    /* ✅ Dashboard Stats Section */
    .dashboard-container {
        display: flex;
        justify-content: center;
        gap: clamp(10px, 3vw, 30px); /* Space between boxes */
        margin-bottom: 40px;
        flex-wrap: wrap; /* ✅ Automatically wraps items if space is less */
    }

    .heading {
        color: #6b1f32;
        font-weight: bold;
        font-size: 22px;
        text-transform: uppercase;
        margin-bottom: 50px;
    }
    .stat-box {
        width: clamp(150px, 22vw, 200px); /* ✅ Adjusts dynamically */
        height: clamp(150px, 22vw, 200px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 15px;
        color: white;
        font-size: clamp(20px, 3vw, 26px); /* ✅ Responsive text */
        font-weight: bold;
        text-align: center;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out;
    }

        .stat-box:hover {
            transform: scale(1.05);
        }

        .stat-box p {
            font-size: clamp(12px, 1.5vw, 14px);
            margin: 0;
            text-transform: uppercase;
            font-weight: bold;
        }

    .red {
        background: linear-gradient(45deg, #E74C3C, #C0392B);
    }

    .gold {
        background: linear-gradient(45deg, #F1C40F, #D4AC0D);
    }

    .blue {
        background: linear-gradient(45deg, #3498DB, #2980B9);
    }

    /* ✅ Customer Reviews Section */
    .reviews-container {
        background: #fff;
        padding: clamp(15px, 3vw, 25px);
        border-radius: 15px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
        max-width: clamp(700px, 80vw, 1000px);
        margin: 50px auto;
        text-align: center;
        transition: transform 0.3s ease-in-out;
    }

        .reviews-container:hover {
            transform: scale(1.02);
        }

        .reviews-container h3 {
            font-size: clamp(18px, 2vw, 22px);
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 3px solid #7B273B;
            padding-bottom: 5px;
        }

    .reviews-table {
        width: 100%;
        border-collapse: collapse;
    }

        .reviews-table th,
        .reviews-table td {
            padding: clamp(10px, 1.5vw, 15px);
            border-bottom: 1px solid #ddd;
            text-align: center;
            word-break: break-word;
        }

        .reviews-table th {
            font-size: clamp(14px, 2vw, 16px);
            font-weight: bold;
            text-transform: uppercase;
            background-color: #7B273B;
            color: white;
        }

        .reviews-table td {
            font-size: clamp(14px, 2vw, 16px);
            color: #333;
        }
</style>
