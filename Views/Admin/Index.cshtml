@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // ✅ Use Admin Layout
}

@model List<Traditiona_trend_on_rent.Models.Contact>

<!-- ✅ Dashboard Stats -->
<div class="dashboard-container">
    <div class="stat-box red">
        <h2>4</h2>
        <p>TOTAL BOOKING</p>
    </div>
    <div class="stat-box gold">
        <h2>6</h2>
        <p>TOTAL COLLECTION</p>
    </div>
    <div class="stat-box blue">
        <h2>@ViewData["TotalRegisteredUsers"]</h2> <!-- ✅ Dynamic Count -->
        <p>RECENTLY REGISTERED</p>
    </div>
</div>

<!-- ✅ Customer Reviews Table -->
<div class="reviews-container">
    <h3>CUSTOMER REVIEWS</h3>
    <table class="reviews-table">
        <thead>
            <tr>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>MESSAGE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.Email</td>
                    <td>@contact.Message</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- ✅ Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 20px;
    }

    /* ✅ Dashboard Stats Section */
    .dashboard-container {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-bottom: 40px;
        flex-wrap: wrap; /* ✅ Responsive */
    }

    .stat-box {
        width: 200px; /* ✅ Slightly Increased */
        height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 15px;
        color: white;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.15);
    }

        .stat-box p {
            font-size: 14px;
            margin: 0;
            text-transform: uppercase;
            font-weight: bold;
        }

    .red {
        background-color: #d7b1b1;
    }

    .gold {
        background-color: #c8b98a;
    }

    .blue {
        background-color: #9daec9;
    }

    /* ✅ Customer Reviews Section */
    .reviews-container {
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
        max-width: 1100px; /* ✅ Increased Width */
        margin: 50px auto;
        text-align: center;
    }

        .reviews-container h3 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 2px solid #7B273B;
            padding-bottom: 5px;
        }

    .reviews-table {
        width: 100%;
        border-collapse: collapse;
    }

        .reviews-table th, .reviews-table td {
            padding: 18px; /* ✅ More Spacing */
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .reviews-table th {
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .reviews-table td {
            font-size: 16px;
            color: #333;
        }

    /* ✅ Responsive Design */
    @media (max-width: 768px) {
        .dashboard-container

    {
        flex-direction: column;
        align-items: center;
    }

    .stat-box {
        width: 100%;
        max-width: 250px;
    }

    }
</style>
