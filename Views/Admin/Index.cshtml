@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Traditiona_trend_on_rent.Models.Contact>

<!-- ✅ Wrapper to Center Content -->
<div class="content-wrapper">

    <!-- ✅ Dashboard Stats -->
    <div class="dashboard-container">
        <div class="stat-box red">
            <h2>4</h2>
            <p>TOTAL BOOKING</p>
        </div>
        <div class="stat-box gold">
            <h2>6</h2>
            <p>TOTAL COLLECTION</p>
        </div>
        <div class="stat-box blue">
            <h2>@ViewData["TotalRegisteredUsers"]</h2>
            <p>RECENTLY REGISTERED</p>
        </div>
    </div>

    <!-- ✅ Customer Reviews Table -->
    <div class="reviews-container">
        <h3>CUSTOMER REVIEWS</h3>
        <table class="reviews-table">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>EMAIL</th>
                    <th>MESSAGE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>@contact.Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Message</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- ✅ Updated Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
    }

    .content-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        max-width: 1200px;
        padding: 20px;
    }

    .dashboard-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 30px;
        margin-bottom: 40px;
        width: 100%;
        text-align: center;
    }

    .stat-box {
        flex: 1;
        min-width: 220px;
        max-width: 300px;
        height: 150px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 15px;
        color: white;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.15);
    }

        .stat-box p {
            font-size: 14px;
            margin: 0;
            text-transform: uppercase;
            font-weight: bold;
        }

    .red {
        background-color: #d9534f;
    }

    .gold {
        background-color: #f0ad4e;
    }

    .blue {
        background-color: #5bc0de;
    }

    .reviews-container {
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 900px;
        text-align: center;
        margin-top: 20px;
    }

        .reviews-container h3 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 2px solid #7B273B;
            padding-bottom: 5px;
        }

    .reviews-table {
        width: 100%;
        border-collapse: collapse;
    }

        .reviews-table th, .reviews-table td {
            padding: 18px;
            border-bottom: 1px solid #ddd;
            text-align: center;
            word-break: break-word;
        }

        .reviews-table th {
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .reviews-table td {
            font-size: 16px;
            color: #333;
        }
</style>
