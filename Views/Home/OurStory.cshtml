@{
    ViewData["Title"] = "Our Story";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use the layout file

}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Inline CSS -->
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        overflow-x: hidden;
    }

    h2 {
        background-color: #7B273B;
        font-family: 'Georgia', serif;
        color: #fff;
        padding: 10px;
        margin-bottom: 30px;
    }

    .our-story-text div {
        margin-bottom: 10px;
        word-wrap: break-word;
        word-break: break-word;
    }

    .carousel-item img {
        width: 100vw;
        height: 100vh;
        object-fit: cover;
    }

    .carousel-inner, .carousel, .carousel-item {
        width: 100%;
    }

    .fixed-section {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        background-color: #fff;
        padding: 30px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        flex-wrap: nowrap;
        overflow: hidden; /* Prevents content from going outside */
        max-width: 100%; /* Ensures the section doesn't exceed the container */
    }

    .image-container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .image-container img {
            width: 300px;
            height: auto;
            border-radius: 10px;
        }

    .text-content {
        flex: 2;
        margin-left: 30px;
        max-width: 600px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: normal; /* Prevents text from going outside the container */
    }
</style>


<!-- "Our Story" Section -->
<div class="container mb-5">
    <h2 class="text-center">Our Story</h2>
    <div class="fixed-section">
        <!-- Image Section (Left) -->
        <div class="image-container">
            <img src="/Images/our.png" alt="Ethnic Wear">
        </div>

        <!-- Text Section (Right) -->
        <div class="text-content">
            <h3 class="text-primary mb-3">"EXPERIENCE THE ELEGANCE OF ETHNIC WEAR WITHOUT THE EXPENSE."</h3>
            <div class="our-story-text">
                <div>Welcome to Traditional Touch of Ethni, your go-to destination for trendy yet exquisite clothes that blend tradition with modernity.</div>
                <div>We believe that every occasion deserves a touch of elegance, and what better way to achieve it than by adorning yourself with beautiful, high-quality, handcrafted attire?</div>
                <div>Our mission is to make fashion accessible while never compromising on quality or craftsmanship.</div>
                <div>Whether it’s a wedding, a festive celebration, or a cultural event, we offer a wide range of stunning outfits that fit your needs and make heads turn.</div>
                <div>From intricately designed bridal lehengas to simple yet elegant casual wear, we have something special for everyone.</div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
