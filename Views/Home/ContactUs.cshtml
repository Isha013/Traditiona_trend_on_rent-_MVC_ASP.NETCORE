@model Traditiona_trend_on_rent.Models.Contact

@{
    ViewData["Title"] = "Contact Us";
}

<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">



<div class="customer-reviews-header">
    CUSTOMER REVIEWS
</div>

<div class="main-container">
    <div class="map-container">
        <h2>MEET US</h2>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d117144.0287863456!2d72.48753721937295!3d23.022505108004733!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e84f43240b3b1%3A0xd769f3b57d1e19db!2sAhmedabad%2C%20Gujarat!5e0!3m2!1sen!2sin!4v1643456123456!5m2!1sen!2sin"
                allowfullscreen="" loading="lazy">
        </iframe>
        <div class="contact-details">
            <p><i class="fas fa-envelope"></i> Email: contact@traditionarent.com</p>
            <p><i class="fas fa-phone"></i> Phone: +91 98765 43210</p>
            <p><i class="fas fa-map-marker-alt"></i> Address: Ahmedabad, Gujarat, India</p>
        </div>
    </div>

    <div class="contact-form-container">
        <h2>CONTACT US</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        <form method="post" asp-controller="Contact" asp-action="ContactUs" id="contactForm">
            <input asp-for="Name" type="text" class="form-control" placeholder="ENTER YOUR NAME" required />
            <input asp-for="Email" type="email" class="form-control" placeholder="ENTER YOUR EMAIL ADDRESS" required />
            <textarea asp-for="Message" class="form-control" placeholder="TYPE ANY MESSAGE..." required></textarea>
            <button type="submit" class="btn-send">SEND</button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var form = document.getElementById("contactForm");
        form.addEventListener("submit", function (event) {
            setTimeout(function () {
                form.reset();
            }, 1000);
        });
    });
</script>
