@model List<Traditiona_trend_on_rent.Models.Collection>

@{
    ViewData["Title"] = "Wedding special";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rental Clothing</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- Link External CSS -->
    <link rel="stylesheet" href="~/css/site.css">

    <style>
        .wishlist-icon i {
            color: gray;
            transition: color 0.3s;
        }

        .wishlist-icon.red i {
            color: red;
        }
    </style>
</head>
<body>

    <div class="back-arrow-container">
        <a href="@Url.Action("Categories", "Dashboard")" class="back-arrow">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
    <div class="container">
        <div class="header-container">
            <h1>Wedding Special</h1>
        </div>

        <!-- Rental Cards Section -->
        <div class="row">
            <div class="col-md-12">
                <!-- Card 1 -->
                <div class="rental-card">
                    <img src="/Images/lengha.jpeg" alt="Lehenga Choli">
                    <div class="rental-details">
                        <div class="rental-price">RENTAL PRIZE: Rs. 3300/-</div>
                        <div class="rental-info">
                            <strong>NAME:</strong> OCCASION LEHENGA CHOLI <br>
                            <strong>TOPWEAR FABRIC:</strong> TUSSAR SILK <br>
                            <strong>BOTTOMWEAR FABRIC:</strong> TUSSAR SILK <br>
                            <strong>DUPATTA FABRIC:</strong> TUSSAR SILK <br>
                            <strong>SET TYPE:</strong> CHOLI AND DUPATTA <br>
                            <strong>SIZE:</strong> FREE SIZE
                        </div>
                    </div>
                    <div class="rental-icons">
                        <a href="javascript:void(0);" class="wishlist-icon">
                            <i class="fas fa-heart"></i>
                        </a>
                        <a href="@Url.Action("AddBooking", "Booking")">
                            <i class="fas fa-shopping-bag"></i>
                        </a>
                    </div>
                </div>
                <!-- Card 2 -->
                <div class="rental-card">
                    <img src="~/Images/choli 1.png" alt="Lehenga Choli">
                    <div class="rental-details">
                        <div class="rental-price">RENTAL PRIZE: Rs. 2900/-</div>
                        <div class="rental-info">
                            <strong>NAME:</strong> DESIGNER LEHENGA <br>
                            <strong>TOPWEAR FABRIC:</strong> NET SILK <br>
                            <strong>BOTTOMWEAR FABRIC:</strong> SATIN <br>
                            <strong>DUPATTA FABRIC:</strong> GEORGETTE <br>
                            <strong>SET TYPE:</strong> CHOLI AND DUPATTA <br>
                            <strong>SIZE:</strong> FREE SIZE
                        </div>
                    </div>
                    <div class="rental-icons">
                        <a href="javascript:void(0);" class="wishlist-icon">
                            <i class="fas fa-heart"></i>
                        </a>
                        <a href="@Url.Action("AddBooking", "Booking")">
                            <i class="fas fa-shopping-bag"></i>
                        </a>
                    </div>
                </div>
                <div class="rental-card">
                    <img src="~/Images/w4.jpeg" alt="Lehenga Choli">
                    <div class="rental-details">
                        <div class="rental-price">RENTAL PRIZE: Rs. 5000/-</div>
                        <div class="rental-info">
                            <strong>NAME:</strong> DESIGNER LEHENGA <br>
                            <strong>TOPWEAR FABRIC:</strong> NET SILK <br>
                            <strong>BOTTOMWEAR FABRIC:</strong> ZARI <br>
                            <strong>DUPATTA FABRIC:</strong> GEORGETTE <br>
                            <strong>SET TYPE:</strong> CHOLI AND DUPATTA <br>
                            <strong>SIZE:</strong> FREE SIZE
                        </div>
                    </div>
                    <div class="rental-icons">
                        <a href="javascript:void(0);" class="wishlist-icon">
                            <i class="fas fa-heart"></i>
                        </a>
                        <a href="@Url.Action("AddBooking", "Booking")">
                            <i class="fas fa-shopping-bag"></i>
                        </a>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="rental-card">
                    <img src="~/Images/w6.jpeg" alt="Lehenga Choli">
                    <div class="rental-details">
                        <div class="rental-price">RENTAL PRIZE: Rs. 3500/-</div>
                        <div class="rental-info">
                            <strong>NAME:</strong> BRIDAL LEHENGA <br>
                            <strong>TOPWEAR FABRIC:</strong> VELVET <br>
                            <strong>BOTTOMWEAR FABRIC:</strong> VELVET <br>
                            <strong>DUPATTA FABRIC:</strong> ORGANZA <br>
                            <strong>SET TYPE:</strong> CHOLI AND DUPATTA <br>
                            <strong>SIZE:</strong> FREE SIZE
                        </div>
                    </div>
                    <div class="rental-icons">
                        <a href="javascript:void(0);" class="wishlist-icon">
                            <i class="fas fa-heart"></i>
                        </a>
                        <a href="@Url.Action("AddBooking", "Booking")">
                            <i class="fas fa-shopping-bag"></i>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script>
        document.querySelectorAll('.wishlist-icon').forEach(function (icon) {
            icon.addEventListener('click', function () {
                icon.classList.toggle('red');
            });
        });
    </script>
</body>
</html>
